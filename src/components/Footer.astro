---
import { napInfo } from '../layouts/Layout.astro';
const currentYear = new Date().getFullYear();
---
<footer>
  <div class="footer-content">
    <div class="footer-section">
      <h3>CreationSiteWebPro</h3>
      <p>Votre partenaire pour des solutions web sur mesure.</p>
    </div>
    <div class="footer-section">
      <h3>Liens rapides</h3>
      <ul>
        <li><a href="/creation-site-web-casablanca">Création Site Web Casablanca</a></li>
        <li><a href="/creation-site-web-maroc">Création Site Web Maroc</a></li>
        <li><a href="/agence-digitale-maroc">Agence Digitale Maroc</a></li>
        <li><a href="/portfolio-realisations-web-casablanca-maroc">Portfolio</a></li>
        <li><a href="/a-propos-agence-web-casablanca">À propos</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/faq-creation-site-web-maroc">FAQ</a></li>
      </ul>
    </div>
    <div class="footer-section">
      <h3>Contact</h3>
      <div class="nap-info" itemscope itemtype="https://schema.org/LocalBusiness">
        <span itemprop="name">{napInfo.name}</span>
        <div itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
          <span itemprop="streetAddress">{napInfo.address.street}</span>,
          <span itemprop="addressLocality">{napInfo.address.city}</span>
          <span itemprop="postalCode">{napInfo.address.postalCode}</span>,
          <span itemprop="addressCountry">{napInfo.address.country}</span>
        </div>
        <div>
          Téléphone: <a href={`tel:${napInfo.phone.replace(/\s+/g, '')}`} itemprop="telephone">{napInfo.phone}</a>
        </div>
        <div>
          Email: <a href={`mailto:${napInfo.email}`} itemprop="email">{napInfo.email}</a>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <p>&copy; {currentYear} CreationSiteWebPro. Tous droits réservés.</p>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-primary);
    color: white;
    padding: 2rem 0 1rem;
    font-family: 'Open Sans', sans-serif;
  }
  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .footer-section {
    flex: 1 1 250px;
    margin-bottom: 2rem;
  }
  .footer-section h3 {
    font-family: 'Montserrat', sans-serif;
    margin-bottom: 1rem;
  }
  .footer-section ul {
    list-style: none;
    padding: 0;
  }
  .footer-section ul li {
    margin-bottom: 0.5rem;
  }
  .footer-section a {
    color: white;
    text-decoration: none;
  }
  .footer-section a:hover {
    text-decoration: underline;
  }
  .footer-bottom {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
    }
    .footer-section {
      margin-bottom: 1.5rem;
    }
  }
</style>