<style>
  footer {
    background-color: var(--color-primary);
    color: white;
    padding: 2rem 0 1rem;
    font-family: 'Open Sans', sans-serif;
  }
  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .footer-section {
    flex: 1 1 250px;
    margin-bottom: 2rem;
  }
  .footer-section h3 {
    font-family: 'Montserrat', sans-serif;
    margin-bottom: 1rem;
  }
  .footer-section ul {
    list-style: none;
    padding: 0;
  }
  .footer-section ul li {
    margin-bottom: 0.5rem;
  }
  .footer-section a {
    color: white;
    text-decoration: none;
  }
  .footer-section a:hover {
    text-decoration: underline;
  }
  .footer-bottom {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
    }
    .footer-section {
      margin-bottom: 1.5rem;
    }
  }
</style>