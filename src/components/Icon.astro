// Vérifiez si l'icône existe dans l'objet icons, sinon utilisez le fichier SVG
const iconSvg = icons[name as keyof IconsType] || '';
const useInlineIcon = iconSvg !== '';
---

{useInlineIcon ? (
  <span class={`icon ${className}`} set:html={iconSvg} />
) : (
  <img 
    src={`/icons/${name}.svg`} 
    alt={`Icône ${name}`} 
    class={`icon ${className}`} 
    width="24" 
    height="24" 
  />
)}

<style>
  .icon {
    display: inline-block;
    width: 24px;
    height: 24px;
  }
  .icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }
</style>