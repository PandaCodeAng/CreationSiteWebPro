---
// src/components/Icon.astro
export interface Props {
  name: string;
}

const { name } = Astro.props;

// Définissez un type pour l'objet icons
type IconsType = {
  [key: string]: string;
  web: string;
  shopping: string;
  cellphone: string;
  magnify: string;
  trophy: string;
  tools: string;
