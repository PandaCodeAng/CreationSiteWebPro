---
export interface Props {
  src: string;
  alt: string;
  className?: string;
  width?: number;
  height?: number;
  isCircular?: boolean;
}

const { src, alt, className, width, height, isCircular = false } = Astro.props;

// Remplacer le chemin de l'image par la version optimis√©e
const optimizedSrc = src.replace('/images/', '/images/optimized/').replace(/\.[^.]+$/, '.webp');

// Optimisation de l'attribut alt
const optimizedAlt = alt.trim() ? alt : 'Image descriptive pour CreationSiteWebPro';
---

<img
  src={optimizedSrc}
  alt={optimizedAlt}
  class:list={[className, { circular: isCircular }]}
  width={width}
  height={height}
  loading="lazy"
  decoding="async"
/>

<style>
  img {
    max-width: 100%;
    height: auto;
  }
  .circular {
    border-radius: 50%;
    object-fit: cover;
  }
</style>