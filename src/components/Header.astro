---
import OptimizedImage from "./OptimizedImage.astro";

// Header.astro
---
<header class="header">
  <div class="container">
    <div class="logo-and-contact">
      <div class="logo">
        <a href="/">
          <OptimizedImage src="/images/logo.png" alt="CreationSiteWebPro Logo" width={110} height={50} />
        </a>
      </div>
      <div class="contact-info">
        <a href="tel:+212679782906" class="contact-link">üìû +212 6 79 78 29 06</a>
        <a href="mailto:contact@creationsitewebpro.com" class="contact-link">‚úâÔ∏è contact@creationsitewebpro.com</a>
      </div>
    </div>
    <input type="checkbox" id="nav-toggle" class="nav-toggle">
    <nav class="nav">
      <ul class="nav-list">
        <li><a href="/" class="nav-link">Accueil</a></li>
        <li><a href="/services/creation-site-web-casablanca" class="nav-link">Nos Services</a></li>
        <li><a href="/portfolio-realisations-web-casablanca-maroc" class="nav-link">R√©alisations</a></li>
        <li><a href="/a-propos-agence-web-casablanca" class="nav-link">√Ä Propos</a></li>
        <li><a href="/contact-expert-web-casablanca" class="nav-link cta-button">Demandez un Devis</a></li>
      </ul>
    </nav>
    <label for="nav-toggle" class="nav-toggle-label">
      <span></span>
    </label>
  </div>
</header>

<style>
  .header {
    background-color: var(--color-primary);
    padding: 1rem;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 999;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .logo-and-contact {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }

  .logo img {
    max-height: 50px;
    width: auto;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    margin-left: 1rem;
  }

  .contact-link {
    color: white;
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 0.3rem;
  }

  .nav-toggle {
    display: none;
  }

  .nav-toggle-label {
    display: none;
    cursor: pointer;
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    display: block;
    transition: background-color 0.3s;
  }

  .nav-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .cta-button {
    background-color: var(--color-secondary);
    border-radius: 5px;
    font-weight: bold;
  }

  .cta-button:hover {
    background-color: #ff8533;
  }

  @media screen and (max-width: 768px) {
    .container {
      flex-direction: column;
      align-items: flex-start;
    }

    .logo-and-contact {
      width: 100%;
      justify-content: space-between;
      margin-bottom: 1rem;
    }

    .contact-info {
      text-align: right;
    }

    .nav-toggle-label {
      display: block;
      padding: 1rem;
      position: absolute;
      top: 0.5rem;
      right: 1rem;
    }

    .nav-toggle-label span,
    .nav-toggle-label span::before,
    .nav-toggle-label span::after {
      display: block;
      background: white;
      height: 2px;
      width: 2rem;
      position: relative;
    }

    .nav-toggle-label span::before,
    .nav-toggle-label span::after {
      content: '';
      position: absolute;
    }

    .nav-toggle-label span::before {
      bottom: 7px;
    }

    .nav-toggle-label span::after {
      top: 7px;
    }

    .nav {
      display: none;
      width: 100%;
    }

    .nav-list {
      flex-direction: column;
      width: 100%;
    }

    .nav-link {
      padding: 1rem 0;
      text-align: center;
    }

    .nav-toggle:checked ~ .nav {
      display: block;
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const header = document.querySelector('.header') as HTMLElement;
    const navToggle = document.getElementById('nav-toggle') as HTMLInputElement | null;
    const navLinks = document.querySelectorAll('.nav-link');

    if (header && navToggle) {
      // Fermer le menu lorsqu'un lien est cliqu√©
      navLinks.forEach(link => {
        link.addEventListener('click', () => {
          if (navToggle) {
            navToggle.checked = false;
          }
        });
      });

      // Ajouter une classe lorsque la page d√©file
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
      });
    }

    // Ajuster le padding-top du body pour √©viter que le contenu soit cach√© par le header
    function adjustBodyPadding() {
      if (header) {
        document.body.style.paddingTop = `${header.offsetHeight}px`;
      }
    }

    // Ajuster le padding initial et lors du redimensionnement de la fen√™tre
    adjustBodyPadding();
    window.addEventListener('resize', adjustBodyPadding);
  });
</script>