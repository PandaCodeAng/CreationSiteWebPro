<style>  .pricing {
    padding: 6rem 0;
    background-color: #f8f9fd;
    background-image: linear-gradient(135deg, #f8f9fd 0%, #e9eeff 100%);
    position: relative;
    overflow: hidden;
  }
  
  .pricing::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #ff6b6b, #ffd166, #06d6a0, #118ab2, #073b4c);
  }
  
  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
  }
  
  .pricing-card {
    background-color: #fff;
    border-radius: var(--border-radius-lg);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    padding: 2.5rem 2rem;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    border: none;
  }
  
  .pricing-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background-color: #ff9f1c;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  
  .pricing-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
  }
  
  .pricing-card:hover::before {
    transform: scaleX(1);
  }
  
  .pricing-card--featured {
    background: linear-gradient(135deg, #118ab2 0%, #073b4c 100%);
    color: white;
    border: none;
    transform: scale(1.05);
    box-shadow: 0 15px 50px rgba(17, 138, 178, 0.4);
  }
    .pricing-card--featured:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: 0 20px 60px rgba(17, 138, 178, 0.5);
  }
  
  .pricing-card--featured::before {
    content: "";
    position: absolute;
    top: -50px;
    right: -50px;
    width: 100px;
    height: 100px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    z-index: 0;
    animation: pulse 4s infinite ease-in-out;
  }
  
  .pricing-card--featured::after {
    content: "";
    position: absolute;
    bottom: -50px;
    left: -50px;
    width: 70px;
    height: 70px;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    z-index: 0;
    animation: pulse 4s infinite ease-in-out 1s;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.5); opacity: 0.3; }
    100% { transform: scale(1); opacity: 0.5; }
  }
  
  .pricing-card__header {
    margin-bottom: 1.5rem;
    position: relative;
  }
    .pricing-card__title {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    line-height: 1.3;
    background: linear-gradient(135deg, #118ab2, #073b4c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    display: inline-block;
  }
  
  .pricing-card--featured .pricing-card__title {
    background: linear-gradient(135deg, #ffffff, #e0f2fe);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
    .pricing-card__badge {
