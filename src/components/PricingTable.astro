<script is:inline>
document.addEventListener('DOMContentLoaded', function() {
  // Animation pour la section des tarifs lorsqu'elle entre dans le viewport
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const cards = document.querySelectorAll('.pricing-card');
        cards.forEach((card, index) => {
          setTimeout(() => {
            card.classList.add('animate-in');
          }, index * 200);
        });
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });

  const pricingSection = document.querySelector('.pricing');
  if (pricingSection) {
    observer.observe(pricingSection);
  }
  
  // Effet de surbrillance sur le tarif mis en avant lors du défilement
  window.addEventListener('scroll', function() {
    const featuredCard = document.querySelector('.pricing-card--featured');
    if (featuredCard && isElementInViewport(featuredCard)) {
      featuredCard.classList.add('highlight');
      setTimeout(() => {
        featuredCard.classList.remove('highlight');
      }, 1000);
    }
  });
  
  function isElementInViewport(el) {
    const rect = el.getBoundingClientRect();
    return (
      rect.top >= 0 &&
      rect.left >= 0 &&
      rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
      rect.right <= (window.innerWidth || document.documentElement.clientWidth)
    );
  }
});
</script>

<style is:global>
  .pricing-card {
    opacity: 0;
