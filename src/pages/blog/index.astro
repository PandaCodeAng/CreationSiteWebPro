---
// src/pages/blog/index.astro
import Layout from '../../layouts/Layout.astro';

const pageTitle = "Blog | Insights sur le Développement Web et le SEO à Casablanca";
const pageDescription = "Découvrez nos derniers articles sur la création de sites web, le développement d'applications, et les stratégies SEO pour booster votre présence en ligne à Casablanca et au Maroc.";

const blogPosts = [
  {
    title: "Comment Créer un Site Web Performant pour votre Entreprise à Casablanca en 2024",
    slug: "creer-site-web-performant-casablanca",
    excerpt: "Découvrez les étapes essentielles pour créer un site web performant et optimisé pour votre entreprise à Casablanca. Des conseils d'experts pour booster votre présence en ligne et attirer plus de clients.",
    date: "2024-03-15",
    author: "Mouhcine Talbi"
  },
  {
    title: "10 Tendances Web Design à Surveiller en 2024",
    slug: "tendances-web-design-2024",
    excerpt: "Découvrez les tendances émergentes en web design qui vont façonner l'expérience utilisateur cette année.",
    date: "2024-01-15",
    author: "Mouhcine Talbi"
  },
  {
    title: "Comment Optimiser votre Site pour la Recherche Vocale",
    slug: "optimisation-recherche-vocale",
    excerpt: "Avec la popularité croissante des assistants vocaux, il est crucial d'adapter votre stratégie SEO. Voici comment.",
    date: "2024-02-01",
    author: "Zakaria Boussnini"
  },
  {
    title: "Les Meilleures Pratiques pour un E-commerce Performant",
    slug: "meilleures-pratiques-ecommerce",
    excerpt: "Augmentez vos conversions et améliorez l'expérience utilisateur de votre boutique en ligne avec ces conseils d'experts.",
    date: "2024-02-15",
    author: "Safae Abed"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="blog-index">
    <h1>{pageTitle}</h1>
    <p class="intro">{pageDescription}</p>

    <div class="blog-posts">
      {blogPosts.map((post) => (
        <article class="blog-post-preview" itemscope itemtype="http://schema.org/BlogPosting">
          <h2 itemprop="headline">
            <a href={`/blog/${post.slug}`} itemprop="url">{post.title}</a>
          </h2>
          <p class="post-meta">
            <time datetime={post.date} itemprop="datePublished">{new Date(post.date).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
            par <span itemprop="author" itemscope itemtype="http://schema.org/Person">
              <span itemprop="name">{post.author}</span>
            </span>
          </p>
          <p itemprop="description">{post.excerpt}</p>
          <a href={`/blog/${post.slug}`} class="read-more">Lire la suite</a>
        </article>
      ))}
    </div>
  </main>
</Layout>

<style>
  .blog-index {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  h1 {
    color: var(--color-primary);
    font-size: clamp(2rem, 5vw, 2.5rem);
    margin-bottom: 1rem;
    text-align: center;
  }

  .intro {
    text-align: center;
    margin-bottom: 2rem;
    font-size: clamp(1rem, 3vw, 1.1rem);
  }

  .blog-post-preview {
    margin-bottom: 2rem;
    border-bottom: 1px solid #eee;
    padding-bottom: 1rem;
  }

  .blog-post-preview h2 {
    color: var(--color-secondary);
    font-size: clamp(1.2rem, 4vw, 1.5rem);
    margin-bottom: 0.5rem;
  }

  .blog-post-preview h2 a {
    text-decoration: none;
    color: inherit;
  }

  .post-meta {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.5rem;
  }

  .read-more {
    display: inline-block;
    margin-top: 0.5rem;
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: bold;
  }

  .blog-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
  }

  .blog-navigation a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .blog-index {
      padding: 1rem;
    }
  }
</style>