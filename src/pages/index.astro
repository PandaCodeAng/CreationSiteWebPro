---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="CreationSiteWebPro | Création de Sites Web Professionnels" description="Expertise en création de sites web et d'applications sur mesure. Boostez votre présence en ligne avec nos solutions performantes et personnalisées.">
  
  <main>
    <section class="hero">
      <div class="container">
        <h1>Transformez Votre Vision en Réalité Digitale</h1>
        <p>Des solutions web sur mesure pour propulser votre entreprise vers de nouveaux sommets.</p>
        <a href="/contact" class="cta-button">Obtenez votre devis gratuit <span class="urgency">Offre limitée!</span></a>
        <p class="social-proof">Déjà plus de 1000 entreprises satisfaites</p>
      </div>
    </section>

    <section class="services">
      <div class="container">
        <h2>Nos Services</h2>
        <div class="service-grid">
          <div class="service-card">
            <img src="/icons/web-design.svg" alt="Web Design" width="64" height="64" loading="lazy">
            <h3>Web Design</h3>
            <p>Des designs modernes et intuitifs pour une expérience utilisateur optimale.</p>
            <span class="scarcity">Places limitées ce mois-ci!</span>
          </div>
          <div class="service-card">
            <img src="/icons/development.svg" alt="Développement Web" width="64" height="64" loading="lazy">
            <h3>Développement Web</h3>
            <p>Des sites web robustes et évolutifs, adaptés à vos besoins spécifiques.</p>
            <span class="scarcity">3 places restantes!</span>
          </div>
          <div class="service-card">
            <img src="/icons/seo.svg" alt="SEO" width="64" height="64" loading="lazy">
            <h3>Optimisation SEO</h3>
            <p>Améliorez votre visibilité en ligne et attirez plus de clients qualifiés.</p>
            <span class="scarcity">Dernière chance!</span>
          </div>
        </div>
      </div>
    </section>

    <section class="testimonials">
      <div class="container">
        <h2>Ce que disent nos clients</h2>
        <div class="testimonial-slider">
          <div class="testimonial">
            <p>"CreationSiteWebPro a transformé notre présence en ligne. Notre trafic a augmenté de 200% en seulement 3 mois!"</p>
            - Marie Dupont, PDG de TechInnovate
          </div>
          <div class="testimonial">
            <p>"Grâce à leur expertise en SEO, notre site est maintenant en première page de Google. Les résultats sont incroyables!"</p>
            - Jean Martin, Fondateur de EcoSolutions
          </div>
          <div class="testimonial">
            <p>"L'équipe de CreationSiteWebPro a créé un e-commerce qui a dépassé toutes nos attentes. Nos ventes en ligne ont explosé!"</p>
            - Sophie Lefebvre, Directrice Marketing chez ModeFrance
          </div>
          <div class="testimonial">
            <p>"Leur approche personnalisée et leur attention aux détails ont fait toute la différence. Notre nouveau site web est magnifique et performant!"</p>
            - Thomas Dubois, Propriétaire de RestauChic
          </div>
        </div>
      </div>
    </section>

    <section class="cta">
      <div class="container">
        <h2>Prêt à Booster Votre Présence En Ligne ?</h2>
        <p>Ne laissez pas vos concurrents vous devancer. Agissez maintenant!</p>
        <a href="/contact" class="cta-button">Contactez-nous <span class="urgency">Offre spéciale 24h!</span></a>
        <p class="guarantee">Satisfaction garantie ou remboursé</p>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Styles spécifiques à la page d'accueil */
  .hero {
    background-color: var(--color-primary);
    color: white;
    padding: 5rem 0;
    text-align: center;
    margin-top: 0;
  }
  .hero h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: 1rem;
  }
  .hero p {
    font-size: clamp(1rem, 3vw, 1.2rem);
    margin-bottom: 2rem;
  }
  .cta-button {
    display: inline-block;
    background-color: var(--color-secondary);
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
    font-size: clamp(1rem, 2vw, 1.1rem);
  }
  .cta-button:hover {
    background-color: #ff8533;
    transform: translateY(-3px);
  }
  .services {
    padding: 4rem 0;
    background-color: #f9f9f9;
  }
  .service-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  .service-card {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s ease;
  }
  .service-card:hover {
    transform: translateY(-5px);
  }
  .testimonials {
    padding: 4rem 0;
    background-color: #e6f2ff;
  }
  .testimonial-slider {
    max-width: 800px;
    margin: 0 auto;
    overflow: hidden;
  }
  .testimonial {
    text-align: center;
    display: none;
  }
  .testimonial.active {
    display: block;
  }
  .testimonial p {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    font-style: italic;
    margin-bottom: 1rem;
  }
  .testimonial cite {
    font-weight: bold;
  }
  .cta {
    background-color: var(--color-secondary);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }
  .cta h2 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }
  .cta p {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    margin-bottom: 2rem;
  }

  .urgency {
    display: inline-block;
    background-color: #ff4500;
    color: white;
    font-size: 0.8em;
    padding: 0.2em 0.5em;
    border-radius: 3px;
    margin-left: 0.5em;
  }

  .social-proof {
    margin-top: 1rem;
    font-size: clamp(0.9rem, 2vw, 1rem);
    font-weight: bold;
  }

  .scarcity {
    display: block;
    margin-top: 1rem;
    font-size: 0.9em;
    color: #ff4500;
    font-weight: bold;
  }

  .guarantee {
    margin-top: 1rem;
    font-size: clamp(0.9rem, 2vw, 1rem);
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .service-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const testimonials = document.querySelectorAll('.testimonial');
    let currentTestimonial = 0;

    function showTestimonial(index: number) {
      testimonials.forEach((testimonial, i) => {
        if (i === index) {
          testimonial.classList.add('active');
        } else {
          testimonial.classList.remove('active');
        }
      });
    }

    function nextTestimonial() {
      currentTestimonial = (currentTestimonial + 1) % testimonials.length;
      showTestimonial(currentTestimonial);
    }

    // Initialiser le premier témoignage
    showTestimonial(currentTestimonial);

    // Changer de témoignage toutes les 5 secondes
    setInterval(nextTestimonial, 5000);
  });
</script>