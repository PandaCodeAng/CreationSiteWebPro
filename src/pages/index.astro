---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="CreationSiteWebPro | Création de Sites Web Professionnels" description="Expertise en création de sites web et d'applications sur mesure. Boostez votre présence en ligne avec nos solutions performantes et personnalisées.">
  <Header />
  
  <main>
    <section class="hero">
      <div class="container">
        <h1>Création de Sites Web et Applications Sur Mesure</h1>
        <p>Transformez votre vision en réalité digitale avec nos solutions web performantes et personnalisées.</p>
        <a href="/contact" class="cta-button">Demandez un devis gratuit</a>
      </div>
    </section>

    <section class="services">
      <div class="container">
        <h2>Nos Services</h2>
        <div class="service-grid">
          <div class="service-card">
            <img src="/icons/web-design.svg" alt="Web Design" width="64" height="64" loading="lazy">
            <h3>Web Design</h3>
            <p>Des designs modernes et intuitifs pour une expérience utilisateur optimale.</p>
          </div>
          <div class="service-card">
            <img src="/icons/development.svg" alt="Développement Web" width="64" height="64" loading="lazy">
            <h3>Développement Web</h3>
            <p>Des sites web robustes et évolutifs, adaptés à vos besoins spécifiques.</p>
          </div>
          <div class="service-card">
            <img src="/icons/seo.svg" alt="SEO" width="64" height="64" loading="lazy">
            <h3>Optimisation SEO</h3>
            <p>Améliorez votre visibilité en ligne et attirez plus de clients qualifiés.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="cta">
      <div class="container">
        <h2>Prêt à Booster Votre Présence En Ligne ?</h2>
        <p>Contactez-nous dès aujourd'hui pour un devis personnalisé et gratuit.</p>
        <a href="/contact" class="cta-button">Contactez-nous</a>
      </div>
    </section>
  </main>

  <footer>
    <div class="container">
      <p>&copy; 2024 CreationSiteWebPro. Tous droits réservés.</p>
    </div>
  </footer>
</Layout>

<style>
  /* Styles spécifiques à la page d'accueil */
  .hero {
    background-color: var(--color-primary);
    color: white;
    padding: 8rem 0 4rem;
    text-align: center;
  }
  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .hero p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }
  .cta-button {
    display: inline-block;
    background-color: var(--color-secondary);
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }
  .cta-button:hover {
    background-color: darken(var(--color-secondary), 10%);
  }
  .services {
    padding: 4rem 0;
    background-color: #f9f9f9;
  }
  .service-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  .service-card {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s ease;
  }
  .service-card:hover {
    transform: translateY(-5px);
  }
  .cta {
    background-color: var(--color-secondary);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }
  footer {
    background-color: #333;
    color: white;
    padding: 2rem 0;
    text-align: center;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    .hero p {
      font-size: 1rem;
    }
    .service-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "CreationSiteWebPro",
  "url": "https://www.creationsitewebpro.com",
  "description": "Création de sites web professionnels et d'applications sur mesure",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://www.creationsitewebpro.com/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
}
</script>